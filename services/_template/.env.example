# {{SERVICE_DISPLAY_NAME}} Environment Variables
#
# Copy this file to .env and fill in your values.
# For local development, the defaults work out of the box.

# ── Service Identity ─────────────────────────────────────────────
SERVICE_NAME={{SERVICE_NAME}}
SERVICE_DISPLAY_NAME={{SERVICE_DISPLAY_NAME}}
SERVICE_PORT={{SERVICE_PORT}}

# ── Database ─────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://{{SERVICE_NAME}}:{{SERVICE_NAME}}_dev@localhost:5432/{{SERVICE_NAME}}
DATABASE_URL_SYNC=postgresql://{{SERVICE_NAME}}:{{SERVICE_NAME}}_dev@localhost:5432/{{SERVICE_NAME}}

# ── Redis ────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ── JWT Authentication ───────────────────────────────────────────
JWT_SECRET_KEY=dev-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ── CORS ─────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:{{DASHBOARD_PORT}}

# ── Stripe Billing (leave empty for mock mode) ──────────────────
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=
STRIPE_BILLING_SUCCESS_URL=http://localhost:{{DASHBOARD_PORT}}/billing?success=true
STRIPE_BILLING_CANCEL_URL=http://localhost:{{DASHBOARD_PORT}}/billing?canceled=true

# ── AI (Claude API) ─────────────────────────────────────────────
ANTHROPIC_API_KEY=

# ── Dashboard ────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:{{SERVICE_PORT}}
